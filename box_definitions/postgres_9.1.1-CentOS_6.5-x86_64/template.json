{
  "builders": [
    {
      "type": "amazon-ebs",
      "ami_name": "dev_infra-postgres_9.1.1-CentOS_6.5-x86_64",
      "instance_type": "t1.micro",
      "region": "eu-west-1",
      "ssh_username": "root",
      "source_ami": "ami-42718735"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "inline": [ "sleep 30" ]
    },
    {
      "type": "shell",
      "inline": [ "mkdir /tmp/sh" ]
    },
    {
      "type": "file",
      "source": "../../sh",
      "destination": "/tmp"
    },
    {
      "scripts": [
        "../../sh/setup_epel_repository-RHEL.sh",
        "../../sh/install_puppet-RHEL.sh"
      ],
      "type": "shell"
    },
    {
      "type": "shell",
      "inline": [ "mkdir /etc/puppet/files" ]
    },
    {
      "type": "file",
      "source": "../../files/",
      "destination": "/etc/puppet/files"
    },
    {
      "type": "shell",
      "inline": [ "cp /etc/puppet/files/fileserver.conf /etc/puppet/" ]
    },
    {
      "type": "shell",
      "inline": [ "yum update -y" ]
    },
    {
      "type": "shell",
      "inline": [ "mkdir -p /etc/puppet/hieradata" ]
    },
    {
      "type": "file",
      "source": "../../hiera/",
      "destination": "/etc/puppet/hieradata"
    },
    {
      "type": "puppet-masterless",
      "manifest_file": "../../manifests/postgres.pp",
      "module_paths": [ "../../modules" ],
      "hiera_config_path": "../../hiera.yaml",
      "facter": { "environment" : "development" }
    }
  ]
}
